{
    "buildCommand": "cd client && yarn install && ./node_modules/vite/bin/vite.js build",
    "outputDirectory": "client/dist",
    "framework": "vite",
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/api/index.js"
      },
      // 沒加這個refresh時,除了入口網站外匯有問題;
      {
        "source": "/:path*",
        "destination": "/index.html"
    }
    ]
    
  }
  